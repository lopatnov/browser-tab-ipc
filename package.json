{
  "name": "@lopatnov/browser-tab-ipc",
  "version": "2.1.0",
  "license": "Apache-2.0",
  "author": "lopatnov",
  "description": "Inter-process communication mechanism between browser tabs. A bus network between browser tabs.",
  "homepage": "https://lopatnov.github.io/browser-tab-ipc/",
  "keywords": [
    "browser-tabs",
    "ipc",
    "bus-network",
    "share-data-between-tabs",
    "TypeScript",
    "JavaScript",
    "library",
    "typescript-library",
    "javascript-library"
  ],
  "umdName": "browserTabIpc",
  "libraryFile": "library",
  "main": "dist/library.cjs",
  "module": "dist/library.mjs",
  "browser": "dist/library.umd.js",
  "types": "dist/library.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/library.mjs",
      "require": "./dist/library.cjs",
      "types": "./dist/library.d.ts"
    }
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopatnov/browser-tab-ipc.git"
  },
  "bugs": {
    "url": "https://github.com/lopatnov/browser-tab-ipc/issues"
  },
  "scripts": {
    "start": "yarn build && yarn serve",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "rollup -c rollup.config.mjs",
    "postbuild": "node ./copy-dist-to-docs.js",
    "watch": "rollup -cw rollup.config.mjs",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "release": "release-it minor",
    "serve": "express-reverse-proxy",
    "test": "jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-object-rest-spread": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@lopatnov/rollup-plugin-uglify": "^4.1.3",
    "@lopatnov/express-reverse-proxy": "^5.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "babel-jest": "^30.2.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "prettier": "^3.8.1",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.1.3",
    "puppeteer": "^24.37.5",
    "puppeteer-core": "^24.37.5",
    "release-it": "^19.2.4",
    "rollup": "^4.34.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "terser": "^5.46.0",
    "tree-kill": "^1.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "events": "^3.3.0"
  }
}
